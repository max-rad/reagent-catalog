mixin pagination()
  .pagination
    .pagination__list
      .pagination__item
        a(href="#").pagination__link.is-active 1
      .pagination__item
        a(href="#").pagination__link 2
      .pagination__item.pagination__item--mobile-hidden
        a(href="#").pagination__link 3
      .pagination__item.pagination__item--mobile-hidden
        a(href="#").pagination__link 4
      .pagination__item
        a(href="#").pagination__link.pagination__link--transparent ...
      .pagination__item
        a(href="#").pagination__link 88
      .pagination__item
        a(href="#").pagination__link 89
      .pagination__item.pagination__item--mobile-hidden
        a(href="#").pagination__link 90
      .pagination__item
        a(href="#").pagination__link
          +icon("icon-arrow-right", 13, 10)
